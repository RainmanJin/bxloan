<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"
%>
	<%@include file="../../../commons/taglibs.jsp" %>
<div id="modal-verificatPersonForm" class="modal fade" tabindex="-1" role="basic"
            aria-hidden="true" style=";" data-backdrop="static">
              <div class="modal-dialog">
                <div class="modal-content">
                  <form id="verificatPersonForm" class="form-horizontal" role="form" method="post">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">
                        &times;
                      </button>
                      <h4 class="blue bigger">
                      </h4>
                    </div>
                    <div class="modal-body">
                      <div class="row">
                        <div class="col-xs-12">
                          <input type="hidden" id="form-field-0" name="id" />
                           <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="familyFriendType">
                              <font color='red'>
                                <font color="red">*</font>
                              </font>
                              	核实人名称：
                            </label>
                            <div class="col-sm-8">
                              <span class="block input-icon input-icon-right" >
                                <input name="name" class="form-control" />
                              </span>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="familyFriendType">
                              <font color='red'>
                                <font color="red">*</font>
                              </font>
                              	与借款人关系：
                            </label>
                            <div class="col-sm-8">
                              <span class="block input-icon input-icon-right" >
                                <select name="relation"  class="form-control">
                                  <dd:options codeType="VerificatPersonType"/>
                                </select>
                              </span>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="familyFriendType">
                              	家庭地址：
                            </label>
                            <div class="col-sm-8">
                              <span class="block input-icon input-icon-right" >
                                <input name="familyaddress" class="form-control" />
                              </span>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="familyFriendType">
                              <font color='red'>
                                <font color="red">*</font>
                              </font>
                              	联系电话：
                            </label>
                            <div class="col-sm-8">
                              <span class="block input-icon input-icon-right" >
                                <input name="telphone" class="form-control" />
                              </span>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="familyFriendType">
                              	备注：
                            </label>
                            <div class="col-sm-8">
                              <span class="block input-icon input-icon-right" >
                                <input name="remark" class="form-control" />
                              </span>
                            </div>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button id="add-VerificatPerson-submit" type="button" class="btn btn-sm btn-primary" type="submit"
                      data-loading-text="正在保存中...">
                        <i class="ace-icon fa fa-arrow-right">
                        </i>
                        	保存
                      </button>
                      <button class="btn btn-sm btn-warning" data-dismiss="modal" type="button">
                        <i class="ace-icon fa fa-times">
                        </i>
                        	取消
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>